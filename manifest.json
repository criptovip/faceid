{
    "manifest_version": 2,
   
    "name": "FaceID",
    "version": "0.1.1",
    "description": "Get ID from facebook users!",
   

    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "faceid.html"
     },
     "permissions": [
      "activeTab"
      ],

    "content_scripts": [{
      "css": ["styles.css"],
      "js": ["content.js"],
      "matches": ["https://www.facebook.com/*"]
    }]
   
  }